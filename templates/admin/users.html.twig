{% extends 'base.html.twig' %}

{% block title %}Page Administrateur{% endblock %}

{% block body %}
    <div>
        <h2>Liste des Utilisateurs</h2>
        <section>
            <div class="buttonContainer">
                {% if page > 1 %}
                    <a href="{{ path('app_admin_usersPage', {'page' : page -1 }) }}">Page précédente</a>&nbsp;
                {% endif %}
                {% if page < totalPages %}
                    <a href="{{ path('app_admin_usersPage', {'page' : page +1 }) }}">Page Suivante</a>
                {% endif %}
            </div>
        </section><br>
    <table>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Téléphone</th>
            <th></th>
            <th></th>
            <th></th>

        </tr>
        {% for participant in listeParticipants %}
            <tr>
                <td>{{participant.id }}</td>
                <td>{{ participant.email }}</td>
                <td>{{participant.prenom }}</td>
                <td>{{participant.nom }}</td>
                <td>{{participant.telephone }}</td>
                <td><a href="{{ path('app_profil_details', {id: participant.id })}}">Détails</a></td>
                <td><a class="admin-link danger" href="{{ path('app_profil_ban', {id: participant.id })}}">Bannir</a></td>
                <td><a href="{{ path('app_profil_delete_admin', {id: participant.id })}}">Supprimer</a></td>
            </tr>
        {%  endfor %}
    </table>
    </div>
{% endblock %}
